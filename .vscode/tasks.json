{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Reset HRMS Tables",
      "type": "shell",
      "command": "sqlcmd -S localhost,1433 -U sa -P 'YourStrong!Passw0rd' -d HRMS -i drop_script.sql"
    },
    {
      "label": "Load Schema",
      "type": "shell",
      "command": "sqlcmd -S localhost,1433 -U sa -P 'YourStrong!Passw0rd' -d HRMS -i schema.sql"
    },
    {
      "label": "Insert Data",
      "type": "shell",
      "command": "sqlcmd -S localhost,1433 -U sa -P 'YourStrong!Passw0rd' -d HRMS -i insert_data.sql"
    },
    {
      "label": "Full Reset (Reset + Schema + Insert)",
      "dependsOn": ["Reset HRMS Tables", "Load Schema", "Insert Data"],
      "dependsOrder": "sequence",
      "type": "shell",
      "command": "echo Full reset completed.",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}