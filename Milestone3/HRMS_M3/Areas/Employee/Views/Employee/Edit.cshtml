@model HRMS_M3.Areas.Employee.Models.EmployeeEditViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="m-0 fw-bold"><i class="bi bi-person-gear me-2"></i>Edit Profile</h5>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Employee_Id" />

                        <h6 class="text-primary fw-bold mb-3">Personal Information</h6>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Full_Name" class="form-label text-secondary small fw-bold">Full Name</label>
                                <input asp-for="Full_Name" class="form-control" placeholder="John Doe" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label text-secondary small fw-bold">Email Address</label>
                                <input asp-for="Email" class="form-control" type="email" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label text-secondary small fw-bold">Phone Number</label>
                                <input asp-for="Phone" class="form-control" />
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label text-secondary small fw-bold">Address</label>
                                <input asp-for="Address" class="form-control" />
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <h6 class="text-danger fw-bold mb-3">Emergency Contact</h6>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Emergency_Contact_Name" class="form-label text-secondary small fw-bold">Contact Name</label>
                                <input asp-for="Emergency_Contact_Name" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Emergency_Contact_Phone" class="form-label text-secondary small fw-bold">Contact Phone</label>
                                <input asp-for="Emergency_Contact_Phone" class="form-control" />
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <div class="mb-4">
                            <label asp-for="ProfileImageFile" class="form-label text-secondary small fw-bold">Update Profile Picture</label>
                            <input asp-for="ProfileImageFile" type="file" class="form-control" />
                            <div class="form-text">Accepted formats: .jpg, .png</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/Employee/Employee/Details/@Model.Employee_Id" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Save Changes
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>