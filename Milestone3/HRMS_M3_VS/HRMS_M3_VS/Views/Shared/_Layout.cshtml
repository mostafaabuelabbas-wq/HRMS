<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - HRMS</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #F8FAFC;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #0C1B3A; /* Dark navy */
            padding-top: 25px;
            color: white;
        }

            .sidebar .brand {
                font-size: 22px;
                font-weight: 700;
                padding-left: 24px;
                margin-bottom: 30px;
            }

            .sidebar .nav-link {
                padding: 12px 20px;
                margin: 6px 12px;
                border-radius: 8px;
                color: #bfc7d5;
                font-size: 15px;
                font-weight: 500;
                display: flex;
                align-items: center;
                transition: background 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .sidebar .nav-link i {
                    width: 22px;
                    margin-right: 12px;
                }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #1E3A8A; /* Bright navy */
                    color: white !important;
                }

        /* Main Content */
        .content {
            margin-left: 260px;
            padding: 40px 40px 40px;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="brand">HRMS</div>

        <nav class="nav flex-column">
            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Dashboard") == true ? "active" : "")"
               asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-chart-line"></i> Dashboard
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Employee") == true ? "active" : "")"
               asp-area="Employee" asp-controller="Home" asp-action="Index">
                <i class="fas fa-users"></i> Employee Profiles & Contracts
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Attendance") == true ? "active" : "")"
               asp-controller="Attendance" asp-action="Index">
                <i class="fas fa-clock"></i> Attendance & Shifts
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Leave") == true ? "active" : "")"
               asp-controller="Leave" asp-action="Index">
                <i class="fas fa-calendar-alt"></i> Leave Management
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Mission") == true ? "active" : "")"
               asp-controller="Mission" asp-action="Index">
                <i class="fas fa-briefcase"></i> Mission & Task Management
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Notifications") == true ? "active" : "")"
               asp-controller="Notifications" asp-action="Index">
                <i class="fas fa-bell"></i> Notifications & Analytics
            </a>

            <a class="nav-link @(Context.Request.Path.Value?.Contains("/Hierarchy") == true ? "active" : "")"
               asp-controller="Hierarchy" asp-action="Index">
                <i class="fas fa-sitemap"></i> Organization Hierarchy
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
