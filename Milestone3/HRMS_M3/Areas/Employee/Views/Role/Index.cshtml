@using HRMS_M3.Areas.Employee.Models
@model List<AssignRoleViewModel>

@{
    ViewData["Title"] = "Roles Management";
}

<div class="container-fluid py-4">

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h3 fw-bold text-dark mb-0">
                        <i class="bi bi-shield-lock me-2 text-warning"></i>Roles Management
                    </h1>
                    <p class="text-muted mt-1 mb-0">View and assign roles to employees</p>
                </div>
                <a asp-area="Employee" asp-controller="Home" asp-action="Index" class="btn btn-light border">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </a>
            </div>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold text-dark">Employee ID</th>
                                <th class="fw-bold text-dark">Full Name</th>
                                <th class="fw-bold text-dark">Current Role</th>
                                <th class="fw-bold text-dark">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-light text-dark fw-semibold">
                                                #@item.Employee_Id.ToString("D5")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="fw-semibold text-dark">@item.Full_Name</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary px-3 py-2 fw-semibold">
                                                @(item.CurrentRoleName ?? "Unassigned")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <!-- FIXED BUTTONS -->
                                                <a asp-area="Employee"
                                                   asp-controller="Role"
                                                   asp-action="Edit"
                                                   asp-route-id="@item.Employee_Id"
                                                   class="btn btn-sm btn-warning fw-semibold">
                                                    <i class="bi bi-pencil me-1"></i>Change Role
                                                </a>

                                                <a asp-area="Employee"
                                                   asp-controller="Employee"
                                                   asp-action="Details"
                                                   asp-route-id="@item.Employee_Id"
                                                   class="btn btn-sm btn-info fw-semibold">
                                                    <i class="bi bi-eye me-1"></i>View Profile
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-5">
                                        <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                        <p class="mt-2">No employees found.</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
