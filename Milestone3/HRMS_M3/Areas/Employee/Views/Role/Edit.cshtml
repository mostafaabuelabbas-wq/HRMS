@using HRMS_M3.Areas.Employee.Models
@model AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Page Header -->
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 fw-bold text-dark mb-0">
                        <i class="bi bi-shield-check me-2 text-success"></i>Assign Role
                    </h1>
                    <p class="text-muted mt-1 mb-0">Update the role assignment for this employee</p>
                </div>

                <a asp-area="Employee" asp-controller="Role" asp-action="Index" class="btn btn-light border">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <form asp-action="Edit" method="post">

                        <input type="hidden" asp-for="EmployeeId" />

                        <!-- Employee Info -->
                        <div class="mb-4">
                            <h5 class="fw-bold text-dark mb-3">
                                <i class="bi bi-person-circle me-2 text-primary"></i>Employee Information
                            </h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Employee ID</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Model.Employee_Id.ToString("D5")"
                                           disabled />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Full Name</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Model.Full_Name"
                                           disabled />
                                </div>
                            </div>
                        </div>

                        <!-- Role Assignment -->
                        <div class="mb-4">
                            <h5 class="fw-bold text-dark mb-3">
                                <i class="bi bi-shield-lock me-2 text-warning"></i>Role Assignment
                            </h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Current Role</label>
                                    <input type="text"
                                           class="form-control form-control-lg bg-light"
                                           value="@Model.CurrentRoleName ?? "Unassigned""
                                           disabled />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NewRoleId" class="form-label fw-semibold">Assign New Role</label>

                                    <select asp-for="NewRoleId" class="form-select form-select-lg">
                                        <option value="">-- Select a Role --</option>

                                        @foreach (var role in Model.Roles)
                                        {
                                            <option value="@role.RoleId">@role.RoleName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                            <a asp-area="Employee" asp-controller="Role" asp-action="Index" class="btn btn-lg btn-secondary">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>

                            <button type="submit" class="btn btn-lg btn-success fw-semibold">
                                <i class="bi bi-check-lg me-2"></i>Assign Role
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .form-control-lg, .form-select-lg {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }
</style>
