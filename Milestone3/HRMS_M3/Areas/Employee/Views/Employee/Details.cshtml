@model HRMS_M3.Areas.Employee.Models.EmployeeDto
@{
    ViewData["Title"] = "Employee Profile";
}

<div class="container py-5">

    <div class="row g-4">
        
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    
                    <div class="mb-4 position-relative">
                        <img src="@(!string.IsNullOrEmpty(Model.Profile_Image) 
                                    ? Model.Profile_Image 
                                    : "/images/avatar-placeholder.png")"
                             class="rounded-circle shadow" 
                             style="width: 150px; height: 150px; object-fit: cover;" 
                             alt="Profile Picture" />
                    </div>

                    <h3 class="fw-bold text-dark">@Model.Full_Name</h3>
                    <p class="text-secondary mb-2">@Model.Position_Title</p>
                    
                    <span class="badge rounded-pill bg-success px-3 py-2">
                        @Model.Employment_Status
                    </span>
                    
                    <hr class="w-100 my-4" />
                    
                    <div class="w-100 text-start px-3">
                         <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Department</small>
                         <p class="fw-semibold text-dark">@Model.Department_Name</p>
                         
                         <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Joined</small>
                         <p class="fw-semibold text-dark mb-0">@Model.Hire_Date?.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="mb-0 fw-bold text-primary">Employee Information</h5>
                </div>
                <div class="card-body px-4 pb-4">
                    
                    <h6 class="text-muted text-uppercase small fw-bold mb-3 mt-2">Contact Details</h6>
                    
                    <div class="row mb-3">
                        <label class="col-sm-3 text-secondary">Email</label>
                        <div class="col-sm-9 fw-medium text-dark">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 text-secondary">Phone</label>
                        <div class="col-sm-9 fw-medium text-dark">@Model.Phone</div>
                    </div>
                    <div class="row mb-4">
                        <label class="col-sm-3 text-secondary">Address</label>
                        <div class="col-sm-9 fw-medium text-dark">@Model.Address</div>
                    </div>

                    <hr class="text-muted opacity-25" />

                    <h6 class="text-muted text-uppercase small fw-bold mb-3 mt-4">Emergency Contact</h6>
                    
                    <div class="row mb-3">
                        <label class="col-sm-3 text-secondary">Contact Name</label>
                        <div class="col-sm-9 fw-medium text-dark">@Model.Emergency_Contact_Name</div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-3 text-secondary">Contact Phone</label>
                        <div class="col-sm-9 fw-medium text-dark">@Model.Emergency_Contact_Phone</div>
                    </div>

                    <div class="mt-5 d-flex justify-content-end">
                        <a href="@Url.Action("Edit", "Employee", new { id = Model.Employee_Id })"
                           class="btn btn-primary px-4">
                           <i class="bi bi-pencil-square me-2"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>